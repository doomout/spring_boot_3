{{>layouts/header}}
<!--상세 페이지-->
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}} <!--모델에 등록되어 있는 데이터를 출력-->
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">수정</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-primary">삭제</a>
<a href="/articles">목록</a>

{{>comments/_comments}}<!--상세 페이지에 댓글 뷰 파일 삽입-->
{{>layouts/footer}}